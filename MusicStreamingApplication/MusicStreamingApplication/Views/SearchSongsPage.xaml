<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicStreamingApplication.Pages.SearchSongsPage">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Search Songs" TextChanged="SearchBar_OnTextChanged"></SearchBar>
            <ListView Margin="20" x:Name="songsListView" ItemSelected="SongsListView_OnItemSelected"  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout VerticalOptions="Center">
                                <Label Text="{Binding SongName}" VerticalTextAlignment="Center" TextColor="Black" FontSize="14"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>